import random

''' makes the person class for the shelling abm'''

class Person:
    def __init__(self, x:int, y:int, people) -> None:
        self.x = x
        self.y = y
        self.status = 0
    def Print(self):
        print('--------------')
        print(f'Person at {self.x},{self.y}, status = {self.status}')
        print('-------')
    def Status(self): 
        return self.status



class People:
    def __init__(self, dim):
        self.people = []
        self.dim = dim
